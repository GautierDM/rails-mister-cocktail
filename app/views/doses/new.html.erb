<h1>Cocktails Maniac</h1>
<p><%= @cocktail.name %></p>
<p> Ajouter une dose</p>
<%= simple_form_for [@cocktail, @dose] do |f| %>

  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit "add a dose", class: "btn btn-primary" %>

<% end %>

<%= link_to "Back to cocktail",  edit_cocktail_path(@cocktail) %>
